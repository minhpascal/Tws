<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-4.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit.xsd">

    <context:property-placeholder location="classpath:*.properties"/>
    <context:component-scan base-package="com.tws.storm"/>
    <import resource="classpath:shared-spring.xml"/>
    <import resource="classpath:message-spring.xml"/>

    <bean id="historyIntervalDecoder" class="com.tws.shared.iqfeed.decoder.HistoryIntervalMessageDecoder"/>

    <bean id="subscriber" class="com.tws.zeromq.ZeromqSubscriber">
        <property name="topic" value="HISTORY_DATA"/>
        <property name="url" value="tcp://127.0.0.1:5799"/>
        <property name="numIOThreads" value="5"/>
        <property name="poolSize" value="5"/>
        <property name="messageListener">
            <bean class="com.tws.storm.HistoryMessageListener">
                <property name="historyIntervalMessageDecoder" ref="historyIntervalDecoder"/>
            </bean>
        </property>
    </bean>

    <rabbit:listener-container connection-factory="connectionFactory" auto-declare="true" acknowledge="none" max-concurrency="5" >
        <rabbit:listener ref="level1Listener" method="onMessageReceived" queues="STORM.LEVEL1" />
        <rabbit:listener ref="historyListener" method="onMessageReceived" queues="STORM.HISTORY" />
    </rabbit:listener-container>

    <!-- level 1 -->
    <rabbit:topic-exchange name="LEVEL1" auto-declare="true" durable="true" >
        <rabbit:bindings>
            <rabbit:binding pattern="#" queue="STORM.LEVEL1" />
        </rabbit:bindings>
    </rabbit:topic-exchange>

    <rabbit:queue auto-declare="true" name="STORM.LEVEL1" durable="false" auto-delete="true" />

    <bean id="level1Listener" class="com.tws.storm.Level1Listener" />

    <!-- history -->
    <rabbit:topic-exchange name="HISTORY" auto-declare="true" durable="true" >
        <rabbit:bindings>
            <rabbit:binding pattern="#" queue="STORM.HISTORY" />
        </rabbit:bindings>
    </rabbit:topic-exchange>

    <rabbit:queue auto-declare="true" name="STORM.HISTORY" durable="false" auto-delete="true" />

    <bean id="historyListener" class="com.tws.storm.HistoryListener" />


</beans>